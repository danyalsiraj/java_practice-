
public class if_else_then {

	public static void main (String [] args){
		boolean gameOver=true;
		int score= 4000;
		int level=5;
		int bonus=100;
		
		//we dont have to use code block if there is only one line after the test/comparison . {}
		// {} --> code block
		if (score<5000 && score>1000){
			System.out.println("your score isless than 5000 and greater than 1000");
		}else if(score <1000){
			System.out.println("score less than 1000");
		}
		else {
			System.out.println("score is more than 5000");
		}
		
		
	}
}
